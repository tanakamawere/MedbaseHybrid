<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="MedbaseHybrid.Controls.SettingsItemControl"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentView.ControlTemplate>
        <ControlTemplate>
            <VerticalStackLayout>
                <Label
                    Margin="20,10,0,-10"
                    FontAttributes="Bold"
                    FontSize="16"
                    HorizontalOptions="Start"
                    Text="{TemplateBinding Title}"
                    VerticalOptions="Center" />
                <Border Padding="20">
                    <ContentPresenter />
                </Border>
            </VerticalStackLayout>
        </ControlTemplate>
    </ContentView.ControlTemplate>
</ContentView>
