<?xml version="1.0" encoding="utf-8" ?>
<Border
    x:Class="MedbaseHybrid.Controls.ThemeItemControl"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="themeItemBorder"
    Margin="-5,-5,10,-5"
    Padding="20"
    BackgroundColor="{AppThemeBinding Light={StaticResource Primary},
                                      Dark={StaticResource QuaternaryDark}}"
    Stroke="{StaticResource Yellow300Accent}">
    <Border.StrokeShape>
        <RoundRectangle CornerRadius="20" />
    </Border.StrokeShape>
    <VerticalStackLayout HorizontalOptions="Center">
        <Image>
            <Image.Source>
                <FontImageSource
                    x:Name="themeItemIcon"
                    FontFamily="fasolid"
                    Size="18" />
            </Image.Source>
        </Image>
        <Label
            x:Name="themeItemLabel"
            Margin="0,5,0,0"
            Text="System"
            TextColor="{AppThemeBinding Light={StaticResource White},
                                        Dark={StaticResource Primary}}" />
    </VerticalStackLayout>
</Border>
